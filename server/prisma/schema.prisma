generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   
  username  String   @unique
  email     String   @unique
  password  String   
  salt      String
  role      String
  products  Product []
  purchase  Purchase[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  categories  Category[]  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime  @default(now())
  purchase    Purchase?
  available   Boolean    @default(true)
}


model Category {
  id       String      @id @default(uuid())
  name     String
  products Product[] 
}


model Purchase {
  id         String   @id @default(uuid())
  product    Product  @relation(fields: [productId], references: [id],onDelete: Cascade)
  productId  String   @unique
  user       User     @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId     String


  createdAt  DateTime @default(now())
}

